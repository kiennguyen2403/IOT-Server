<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="IotMobileController.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:IotMobileController"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Dashboard"
            Icon= "dashboardicon.png">
            <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        </Tab>
        <Tab Title="Controller"
            Icon="controllericon.png">
            <ShellContent
            Title="Controller"
            ContentTemplate="{DataTemplate local:Controller}"
        Route="Controller"/>
        </Tab>
    </TabBar>
    
   

</Shell>
